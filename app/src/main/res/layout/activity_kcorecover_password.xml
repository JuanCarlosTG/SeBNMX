<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appvisiondesigner.sbnmx.KCORecoverPassword">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/login_ciudad"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/txt_validation_r"
            android:id="@+id/validation_r"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="-70dp"
            android:gravity="center_horizontal" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/inp_soid_r"
            android:hint="@string/txt_soid_r"
            style="@style/editTextCustom"
            android:background="@drawable/login_botonj"
            android:drawableLeft="@drawable/registro_mail"
            android:drawablePadding="10dp"
            android:paddingLeft="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/validation_r"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/btnLogin"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_btn_entrar"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/inp_soid_r"/>

    </RelativeLayout>



</RelativeLayout>
